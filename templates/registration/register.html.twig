{% extends 'layouts/auth_base.html.twig' %}

{% block title %}Inscription · {{ parent() }}{% endblock %}

{% block body %}
    <div class="d-flex flex-column flex-lg-row flex-column-fluid">
        {# Colonne visuelle à gauche (cacher sur mobile) #}
        <div class="d-none d-lg-flex w-lg-50 bg-body flex-center">
            <img src="{{ asset('assets/media/illustrations/dozzy-1/4.png') }}" alt="" class="mw-100" style="max-height:360px;">
        </div>

        {# Colonne formulaire #}
        <div class="d-flex w-100 w-lg-50 flex-center p-10">
            <div class="card shadow-sm w-100" style="max-width:520px;">
                <div class="card-body p-10">
                    <h1 class="mb-7">Créer un compte</h1>

                    {{ form_start(registrationForm, {'attr': {'class': 'form w-100'}}) }}
                    {# Champs prioritaires #}
                    {{ form_row(registrationForm.email,         { label: 'Email',        attr: {'autocomplete':'email',         'class':'form-control-lg'} }) }}
                    {{ form_row(registrationForm.plainPassword, { label: 'Mot de passe', attr: {'autocomplete':'new-password', 'class':'form-control-lg'} }) }}

                    {# Rendre TOUS les autres champs (nom, prénom, métier, etc.) AVANT le bouton #}
                    {{ form_rest(registrationForm) }}

                    <button class="btn btn-primary w-100 mt-2" type="submit">S’inscrire</button>
                    {# IMPORTANT : ne pas rerendre le rest une 2e fois #}
                    {{ form_end(registrationForm, {'render_rest': false}) }}

                    <div class="text-center text-muted fs-7 mt-6">
                        Déjà inscrit ? <a href="{{ path('app_login') }}" class="link-primary">Se connecter</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
