{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Metier</th>
                <th>Etat_validation</th>
                <th>DateCreation</th>
                <th>Formation</th>
                <th>Cv</th>
                <th>Specialite</th>
                <th>PosteOccupe</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.metier }}</td>
                <td>{{ user.etatValidation ? 'Yes' : 'No' }}</td>
                <td>{{ user.dateCreation ? user.dateCreation|date('Y-m-d') : '' }}</td>
                <td>{{ user.formation }}</td>
                <td>{{ user.cv }}</td>
                <td>{{ user.specialite }}</td>
                <td>{{ user.posteOccupe }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
