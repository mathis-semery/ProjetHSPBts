{% extends 'layouts/auth_base.html.twig' %}

{% block title %}Connexion · {{ parent() }}{% endblock %}

{% block body %}
    <div class="d-flex flex-column flex-lg-row flex-column-fluid">
        <!-- Colonne visuelle -->
        <div class="d-none d-lg-flex w-lg-50 bg-body flex-center">
            <img src="{{ asset('assets/media/illustrations/dozzy-1/1.png') }}" alt="" class="mw-100" style="max-height: 360px;">
        </div>

        <!-- Colonne formulaire -->
        <div class="d-flex w-100 w-lg-50 flex-center p-10">
            <div class="card shadow-sm w-100" style="max-width:480px;">
                <div class="card-body p-10">
                    <h1 class="mb-7">Connexion</h1>

                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <form method="post" action="{{ path('app_login') }}" class="form w-100">
                        <div class="mb-7">
                            <label class="form-label">Email</label>
                            <input type="email" name="email" value="{{ last_username|default('') }}"
                                   required autofocus autocomplete="email"
                                   class="form-control form-control-lg form-control-solid">
                        </div>

                        <div class="mb-7">
                            <label class="form-label">Mot de passe</label>
                            <input type="password" name="password" required autocomplete="current-password"
                                   class="form-control form-control-lg form-control-solid">
                        </div>

                        <div class="d-flex flex-stack mb-7">
                            <label class="form-check form-check-custom form-check-solid">
                                <input class="form-check-input" type="checkbox" name="_remember_me" value="on"/>
                                <span class="form-check-label">Se souvenir de moi</span>
                            </label>
                            <a href="#" class="link-primary fs-7">Mot de passe oublié ?</a>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

                        <button class="btn btn-primary w-100" type="submit">Se connecter</button>
                    </form>

                    <div class="text-center text-muted fs-7 mt-6">
                        Pas de compte ?
                        <a href="{{ path('app_register') }}" class="link-primary">Créer un compte</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
